        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles.css")
        title search
    body 
        include ./header.pug
        main
            include ./searchFragments/formToSearch.pug
